<%= form_with(model: [@author, @book], local: true) do |form| %>
  <% if @book.errors.any? || @book.author.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong><%= pluralize(@book.errors.count + @book.author.errors.count, "error") %> prohibited this book from being saved:</strong>
      <ul class="mt-3 list-disc list-inside">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        <% @book.author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-4">
    <%= form.fields_for :author do |author_form| %>
      <%= author_form.label :name, class: "block text-gray-700 font-bold mb-2" %>
      <%= author_form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <% end %>
  </div>

  <div class="mt-4">
    <%= form.label :title, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mt-4">
    <%= form.label :description, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mt-4">
    <%= form.submit "Save Book", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
